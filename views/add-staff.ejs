<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Add Staff</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
    <style>
        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #23272f 0%, #3a3f4b 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Poppins', Arial, Helvetica, sans-serif;
        }
        .add-staff-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 40px 0 rgba(0,0,0,0.18);
            padding: 48px 40px 40px 40px;
            width: 95%;
            margin: 30px auto 0 auto;
        }
        .add-staff-title {
            text-align: center;
            color: #F4333D;
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 18px;
        }
        .form-label {
            color: #23272f;
            font-weight: 600;
        }
        .form-control {
            background: #fff;
            color: #23272f;
            border: 1px solid #bbb;
            border-radius: 6px;
            margin-bottom: 16px;
        }
        .form-control:focus {
            background: #fff;
            color: #23272f;
            border-color: #F4333D;
            box-shadow: 0 0 0 0.2rem rgba(244,51,61,0.10);
        }
        .btn-add {
            background: #F4333D;
            color: #fff;
            font-weight: 700;
            border: none;
            border-radius: 6px;
            padding: 10px 0;
            font-size: 1.1rem;
            margin-top: 8px;
            transition: background 0.2s;
        }
        .btn-add:hover {
            background: #ff232e;
        }
        .alert {
            margin-bottom: 18px;
        }
    </style>
</head>
<body>
        <div class="add-staff-card">
            <div style="display: flex; justify-content: flex-end; margin-bottom: 8px;">
                <a href="/attendance" class="btn btn-secondary" style="font-weight:700; border-radius:4px; background:#23272f; color:#fff; border:none;">
                    <i class="fas fa-arrow-left"></i> Back to Attendance
                </a>
            </div>
            <div class="add-staff-title">Staff List</div>
                <% if (error && error.length > 0) { %>
                    <div class="alert alert-danger"><%= error[0] %></div>
                <% } %>
                <% if (success && success.length > 0) { %>
                    <div class="alert alert-success"><%= success[0] %></div>
                <% } %>
                <div style="display: flex; justify-content: flex-end; margin-bottom: 12px;">
                        <button class="btn btn-primary" style="background: #F4333D; color: #fff; font-weight: 700; border: none; border-radius: 4px;" data-bs-toggle="modal" data-bs-target="#addStaffModal">
                                <i class="fas fa-user-plus"></i> Add Staff
                        </button>
                </div>
                <div class="table-responsive">
                    <table id="staffTable" class="display table table-bordered align-middle" style="width:100%">
                        <thead>
                            <tr>
                                <th>NRIC</th>
                                <th>Full Name</th>
                                <th>Department</th>
                                <th>Mon-Fri</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (staffList && staffList.length > 0) { %>
                                <% staffList.forEach(function(staff) { %>
                                    <tr>
                                        <td><%= staff.NRIC %></td>
                                        <td><%= staff.Fullname %></td>
                                        <td><%= staff.Department %></td>
                                        <td><%= staff['Mon-Fri'] ? 'Yes' : 'No' %></td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr><td colspan="4" class="text-center">No staff found.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
        </div>

        <!-- Add Staff Modal -->
        <div class="modal fade" id="addStaffModal" tabindex="-1" aria-labelledby="addStaffModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addStaffModalLabel">Add Staff</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/add-staff" method="POST" autocomplete="off">
                        <div class="modal-body">
                                <label for="nric" class="form-label">NRIC</label>
                                <input type="text" id="nric" name="nric" class="form-control" maxlength="10" required>

                                <label for="fullname" class="form-label">Full Name</label>
                                <input type="text" id="fullname" name="fullname" class="form-control" required>

                                <label for="department" class="form-label">Department</label>
                                <input type="text" id="department" name="department" class="form-control" required>

                                <div class="form-check mb-3">
                                        <input class="form-check-input" type="checkbox" id="monfri" name="monfri" value="1">
                                        <label class="form-check-label" for="monfri">Mon-Fri</label>
                                </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-add" style="padding-left: 24px; padding-right: 24px;"> Add Staff </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- jQuery and DataTables JS -->
        <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                $('#staffTable').DataTable({
                    order: [[1, 'asc']],
                    pageLength: 10,
                    lengthMenu: [10, 25, 50, 100],
                    info: true,
                    autoWidth: false
                });
            });
        </script>
</body>
</html>
